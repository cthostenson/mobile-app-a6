<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:d="http://xamarin.com/schemas/2014/forms/design" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d" x:Class="assignment6.Views.ItemDetailPage" Title="{Binding Title}">
    <AbsoluteLayout>
        <Label Text="Text:" FontSize="Medium" AbsoluteLayout.LayoutBounds="1,.5, 25, 100"
                AbsoluteLayout.LayoutFlags="PositionProportional" />
        <Label Text="{Binding Item.Text}" d:Text="Item name" FontSize="Small" AbsoluteLayout.LayoutBounds="30,25, 50, 100"
                AbsoluteLayout.LayoutFlags="PositionProportional"/>
        <Label Text="Description:" FontSize="Medium" />
        <Label Text="Absolute Layout" FontSize="Medium" AbsoluteLayout.LayoutBounds="1,0.75, 100, 100"
                AbsoluteLayout.LayoutFlags="PositionProportional"/>
        <Label Text="{Binding Item.Description}" d:Text="Item description" FontSize="Small" AbsoluteLayout.LayoutBounds="100,25, 150, 100"
                AbsoluteLayout.LayoutFlags="PositionProportional"/>
    </AbsoluteLayout>
</ContentPage>